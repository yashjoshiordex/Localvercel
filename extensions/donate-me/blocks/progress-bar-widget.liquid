<script src="{{ 'progress-bar.js' | asset_url }}" defer></script>

<style>
    .progress-wrapper {
      width: 100%;
      margin: 20px 0;
      padding: {{ block.settings.wrapper_padding }}px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f9f9f9;
    }

    .no-product-message {
      padding: 30px 20px;
      background: #3B86AF;
      border: 1px solid #2a6a8a;
      border-radius: 8px;
      text-align: center;
      color: #ffffff;
      font-size: 16px;
      margin: 20px 0;
    }

    .no-product-message strong {
      display: block;
      margin-bottom: 8px;
      font-size: 20px;
      color: #ffffff;
    }

    .no-product-message p {
      margin: 0;
      font-size: 14px;
      color: #e8f4f8;
    }

    .progress-title {
      font-size: {{ block.settings.title_font_size }}px;
      color: {{ block.settings.title_color }};
      font-weight: 600;
      margin-bottom: 15px;
      text-align: center;
    }

    .progress-bar-container {
      width: 100%;
      height: {{ block.settings.progress_height }}px;
      background-color: {{ block.settings.progress_bg_color }} !important;
      border: 1px solid #ccc;
      border-radius: 4px;
      overflow: hidden;
      position: relative;
      margin: 10px 0;
      display: block !important;
    }

    .progress-bar-fill {
      width: 0%;
      height: 100% !important;
      {% if block.settings.enable_gradient %}
        background: linear-gradient(90deg, {{ block.settings.progress_fill_color }} 0%, {{ block.settings.gradient_end_color }} 100%) !important;
      {% else %}
        background-color: {{ block.settings.progress_fill_color }} !important;
      {% endif %}
      transition: width 0.5s ease;
      position: absolute;
      top: 0;
      left: 0;
      display: block !important;
    }

    .progress-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 12px;
      font-weight: bold;
      color: {{ block.settings.progress_text_color }};
      z-index: 10;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
      pointer-events: none;
    }

    .sales-goal-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 15px;
      font-size: {{ block.settings.info_font_size }}px;
      gap: 10px;
    }

    .sales-amount {
      color: {{ block.settings.sales_color }};
      font-weight: 600;
    }

    .goal-amount {
      color: {{ block.settings.goal_color }};
      font-weight: 600;
    }

    .donate-me-branding {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      font-size: 10px;
      color: #888;
      font-weight: bold;
      opacity: 0.7;
      text-decoration: none;
      pointer-events: none;
    }

    .donate-me-branding img {
  max-width: 100px;
  height: auto;
  max-height: 100px;
  object-fit: contain;
  flex-shrink: 0;
}

    .progress-description {
      font-size: {{ block.settings.description_font_size }}px;
      color: {{ block.settings.description_color }};
      text-align: center;
      margin-bottom: 10px;
      line-height: 1.4;
    }

    @media only screen and (max-width: 767px) {
      .progress-wrapper {
        padding: 15px;
        margin: 10px 0;
      }

      .sales-goal-info {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
        font-size: 12px;
      }

      .progress-title {
        font-size: 18px;
      }

      .progress-bar-container {
        height: 20px;
      }

      .no-product-message {
        padding: 25px 15px;
      }

      .no-product-message strong {
        font-size: 18px;
      }

      .donate-me-branding {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 11px;
    color: #888;
    font-weight: bold;
    opacity: 0.7;
    text-decoration: none;
    pointer-events: none;
    min-height: 35px;
  }
      .donate-me-branding img {
      max-width: 100px;
    height: auto;
    max-height: 20px;
    object-fit: contain;
    flex-shrink: 0;
  }
    }
</style>

{% if block.settings.product and block.settings.product != blank %}
  {% assign selected_product = all_products[block.settings.product] %}
  
  {% if selected_product and selected_product.id %}
    <!-- Show progress bar only when product is selected and exists -->
    <div class="progress-wrapper">
      {% if block.settings.show_title %}
        <h3 class="progress-title">{{ block.settings.widget_title | default: 'Donation Progress' }}</h3>
      {% endif %}

      {% if block.settings.show_description and block.settings.widget_description != blank %}
        <p class="progress-description">{{ block.settings.widget_description }}</p>
      {% endif %}
      
      <div 
        class="progress-bar-container"
        data-product-id="{{ selected_product.id }}"
        data-api-endpoint="/apps/donation/app/product"
        data-remove-branding="{{ block.settings.remove_branding }}"
      >
        <div id="progress-bar-fill" class="progress-bar-fill"></div>
        {% if block.settings.show_percentage %}
          <div id="progress-text" class="progress-text">0%</div>
        {% endif %}
      </div>
      
      <div class="sales-goal-info">
        <span id="current-sales" class="sales-amount">
          {{ block.settings.sales_label | default: 'Raised' }}:   {{ cart.currency.symbol }}0
        </span>

        {% unless block.settings.remove_branding %}
          <div class="donate-me-branding">
            <span>Powered by </span>
            <img src="{{ 'donate-me-logo.svg' | asset_url }}" alt="DonateMe" height="100" width="100"  loading="lazy">
          </div>
        {% endunless %}

        <span id="goal-target" class="goal-amount">
          {{ block.settings.goal_label | default: 'Goal' }}: {{ cart.currency.symbol }}0
        </span>
      </div>
    </div>
  {% else %}
    <!-- Show message when selected product doesn't exist -->
    <div class="no-product-message">
      <strong>Product Not Found</strong>
      <p>The selected product could not be found. Please select a valid donation product in the section settings.</p>
    </div>
  {% endif %}
{% else %}
  <!-- Show message when no product is selected -->
  <div class="no-product-message">
    <strong>No Product Selected</strong>
    <p>Please select a donation product in the section settings to display the progress bar.</p>
  </div>
{% endif %}

{% schema %}
{
  "name": "Progress Bar Widget",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select Donation Product"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Widget Title",
      "default": true
    },
    {
      "type": "text",
      "id": "widget_title",
      "label": "Widget Title",
      "default": "Donation Progress"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Description",
      "default": false
    },
    {
      "type": "textarea",
      "id": "widget_description",
      "label": "Widget Description",
      "placeholder": "Add a description about your donation campaign..."
    },
    {
      "type": "checkbox",
      "id": "show_percentage",
      "label": "Show Percentage Text",
      "default": true
    },
    {
      "type": "text",
      "id": "sales_label",
      "label": "Sales Label Text",
      "default": "Raised"
    },
    {
      "type": "text",
      "id": "goal_label",
      "label": "Goal Label Text",
      "default": "Goal"
    },
    {
      "type": "range",
      "id": "wrapper_padding",
      "label": "Wrapper Padding",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "progress_height",
      "label": "Progress Bar Height",
      "min": 15,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 25
    },
    {
      "type": "color",
      "id": "progress_bg_color",
      "label": "Progress Bar Empty Background Color",
      "default": "#e0e0e0"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "Enable Gradient Progress Bar",
      "default": false
    },
    {
      "type": "color",
      "id": "progress_fill_color",
      "label": "Progress Bar Fill Color (Start Color if Gradient)",
      "default": "#3B86AF"
    },
    {
      "type": "color",
      "id": "gradient_end_color",
      "label": "Gradient End Color",
      "default": "#5aa3d0",
      "info": "Only used when gradient is enabled"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Widget Title Text Font Size",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Widget Title Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Text Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "progress_text_color",
      "label": "Percentage Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "info_font_size",
      "label": "Info Text Font Size(sales/Goal)",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "sales_color",
      "label": "Sales Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "goal_color",
      "label": "Goal Text Color",
      "default": "#666666"
    },
    {
      "type": "checkbox",
      "id": "remove_branding",
      "label": "Remove Branding",
      "default": false,
      "info": "Remove 'Powered by DonateMe' branding (requires premium plan)"
    }
  ]
}
{% endschema %}